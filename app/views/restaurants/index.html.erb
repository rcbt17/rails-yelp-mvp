<div class="container my-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
      <h1>All Restaurants</h1>
      <%= link_to "Add Restaurant", new_restaurant_path, class: "btn btn-primary" %>
      <hr class="text-muted">
      <% @restaurants.each do |restaurant| %>
        <div class="card card-body my-2">
          <div class="d-flex align-items-center">
            <h3><%= restaurant.name %></h3>
            <h6 class="mx-3 text-muted"><%= restaurant.category.capitalize %></h6>
          </div>
          <span class="text-muted"> <%= restaurant.address %></span>
          <span class="mt-3"><%= link_to "Details", restaurant_path(restaurant), class: "btn btn-sm btn-dark" %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
